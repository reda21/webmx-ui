{
    "name": "webmx-ui",
    "version": "0.0.2",
    "description": "A modern, accessible Vue 3 component library built with TypeScript, Tailwind CSS, and Radix Vue",
    "author": "Reda21",
    "license": "MIT",
    "keywords": [
        "vue",
        "vue3",
        "components",
        "ui",
        "component-library",
        "typescript",
        "tailwindcss",
        "radix-vue",
        "accessible",
        "form-validation",
        "button",
        "card",
        "input",
        "drawer",
        "tooltip",
        "avatar",
        "badge",
        "datepicker"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/reda21/web-ui.git"
    },
    "bugs": {
        "url": "https://github.com/reda21/web-ui/issues"
    },
    "homepage": "https://github.com/reda21/web-ui#readme",
    "type": "module",
    "main": "./dist/web-ui.umd.cjs",
    "module": "./dist/web-ui.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/web-ui.js",
            "require": "./dist/web-ui.umd.cjs"
        },
        "./dist/web-ui.css": "./dist/web-ui.css"
    },
    "sideEffects": [
        "*.css"
    ],
    "scripts": {
        "build": "vite build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "@iconify/vue": "^5.0.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "radix-vue": "^1.9.17",
        "tailwind-merge": "^3.4.0",
        "v-calendar": "^3.1.2",
        "vaul-vue": "^0.4.1",
        "vue": "^3.5.25"
    },
    "optionalDependencies": {
        "yup": "^1.7.1",
        "zod": "^3.0.0 || ^4.0.0"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.17",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitest/ui": "^4.0.14",
        "@vue/test-utils": "^2.4.6",
        "happy-dom": "^20.0.11",
        "tailwindcss": "^4.1.17",
        "tsup": "^8.5.1",
        "typescript": "^5.7.2",
        "vite": "^6.0.1",
        "vite-plugin-dts": "^4.3.0",
        "vitest": "^4.0.14",
        "yup": "^1.7.1",
        "zod": "^4.1.13"
    }
}
